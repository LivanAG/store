<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <!-- Appender a archivo con rotación diaria -->
        <RollingFile name="FileLogger"
                     fileName="logs/app.log"
                     filePattern="logs/app-%d{yyyy-MM-dd}.log.gz">
            <PatternLayout>
                <!-- Formato: fecha, usuario (ThreadContext) y nivel -->
                <Pattern>%d{yyyy-MM-dd HH:mm:ss} [%X{usuario}] %-5level %logger{36} - %msg%n</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1"/>
            </Policies>
        </RollingFile>

        <!-- Appender a consola -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss} [%X{usuario}] %-5level %logger{36} - %msg%n"/>
        </Console>
    </Appenders>

    <Loggers>
        <!-- Logger para tu paquete de aplicación -->
        <Logger name="com.seidor.store" level="debug" additivity="false">
            <AppenderRef ref="FileLogger"/>
            <AppenderRef ref="Console"/>
        </Logger>

        <!-- Root logger: solo errores no controlados -->
        <Root level="error">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>
