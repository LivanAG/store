<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <!-- Logs de Product -->
        <RollingFile name="ProductFileLogger"
                     fileName="logs/product.log"
                     filePattern="logs/product-%d{yyyy-MM-dd}.log.gz">
            <PatternLayout>
                <Pattern>%d{yyyy-MM-dd HH:mm:ss} [%X{usuario}] %-5level %logger{36} - %msg%n</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1"/>
            </Policies>
        </RollingFile>

        <!-- Logs de Sell -->
        <RollingFile name="SellFileLogger"
                     fileName="logs/sell.log"
                     filePattern="logs/sell-%d{yyyy-MM-dd}.log.gz">
            <PatternLayout>
                <Pattern>%d{yyyy-MM-dd HH:mm:ss} [%X{usuario}] %-5level %logger{36} - %msg%n</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1"/>
            </Policies>
        </RollingFile>

        <!-- Logs de Auth -->
        <RollingFile name="AuthFileLogger"
                     fileName="logs/auth.log"
                     filePattern="logs/auth-%d{yyyy-MM-dd}.log.gz">
            <PatternLayout>
                <Pattern>%d{yyyy-MM-dd HH:mm:ss} [%X{usuario}] %-5level %logger{36} - %msg%n</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1"/>
            </Policies>
        </RollingFile>

        <!-- Consola -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss} [%X{usuario}] %-5level %logger{36} - %msg%n"/>
        </Console>
    </Appenders>

    <Loggers>
        <!-- Logger Product -->
        <Logger name="productLogger" level="debug" additivity="false">
            <AppenderRef ref="ProductFileLogger"/>
            <AppenderRef ref="Console"/>
        </Logger>

        <!-- Logger Sell -->
        <Logger name="sellLogger" level="debug" additivity="false">
            <AppenderRef ref="SellFileLogger"/>
            <AppenderRef ref="Console"/>
        </Logger>

        <!-- Logger Auth -->
        <Logger name="authLogger" level="debug" additivity="false">
            <AppenderRef ref="AuthFileLogger"/>
            <AppenderRef ref="Console"/>
        </Logger>

        <!-- Root logger: solo errores no controlados -->
        <Root level="error">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>
